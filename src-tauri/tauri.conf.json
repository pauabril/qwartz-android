{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "qwartz-android",
  "version": "0.1.0",
  "identifier": "dev.pauabril.qwartz-android",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun --bun run dev",
    "beforeBuildCommand": "bun --bun run build-only"
  },
  "app": {
    "windows": [
      {
        "title": "qwartz",
        "width": 412,
        "height": 915,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
